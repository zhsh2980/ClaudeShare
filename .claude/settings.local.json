{
  "permissions": {
    "allow": [
      "Read(//Users/zhangshan/.claude/**)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 /Users/zhangshan/.claude/hooks/save-prompt.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/auto-commit-on-edit.py"
          }
        ]
      }
    ]
  }
}